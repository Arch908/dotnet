@{
    ViewData["Title"] = "Welcome to Buffet Dinner";
}

<div class="hero-section text-center text-white">
    <div class="hero-overlay">
        <div class="hero-content">
            <h1 class="display-3 fw-bold">Buffet Dinner</h1>
            <p class="lead mt-3">
                Experience a feast like never before — where taste meets tradition.
            </p>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg mt-4">
                View Our Menu
            </a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row text-center mb-5">
        <h2 class="fw-bold">Why Choose Buffet Dinner?</h2>
        <p class="text-muted">We bring you authentic dishes prepared with passion and fresh ingredients.</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-primary">Diverse Menu</h4>
                    <p class="card-text">From local favorites to international cuisines — enjoy over 50 dishes daily.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-primary">Expert Chefs</h4>
                    <p class="card-text">Our world-class chefs bring authentic flavor to every plate.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-primary">Cozy Ambience</h4>
                    <p class="card-text">Relax in our beautifully designed dining space — perfect for families and friends.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <h3 class="fw-bold">Visit Us Today!</h3>
        <p class="text-muted">Open daily from 6:00 PM to 11:00 PM • Located at Kathmandu City Hall</p>
    </div>
</div>
